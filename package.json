{
  "name": "vl-dummy",
  "version": "0.0.1",
  "description": "Blauwdruk voor nieuwe webcomponenten",
  "scripts": {
    "prepare": "npm update --dev vl-ui-util && npm run prepare:util",
    "prepare:util": "npm explore vl-ui-util -- npm run util",
    "test": "wct -l chrome,firefox --npm",
    "release": "np",
    "release:prepare": "npm run release:prepare:build && npm run release:prepare:imports && npm run release:prepare:css && npm run release:prepare:commit",
    "release:prepare:build": "uglifyjs --compress --mangle --output vl-dummy.js -- *.src.js",
    "release:prepare:imports": "replace '/node_modules/vl-ui-core/vl-core.src.js' '/node_modules/vl-ui-core/vl-core.js' vl-dummy.js",
    "release:prepare:css": "replace '\\.\\./style.css' '/node_modules/vl-ui-dummy/style.css' vl-dummy.js",
    "release:prepare:commit": "git add -f vl-dummy.js && git commit --amend --no-edit && git pull",
    "release:testless": "np --yolo",
    "demo": "http-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milieuinfo/webcomponent-vl-dummy.git"
  },
  "author": "DIDM",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milieuinfo/webcomponent-vl-dummy/issues"
  },
  "homepage": "https://github.com/milieuinfo/webcomponent-vl-dummy#readme",
  "dependencies": {
    "vl-ui-util": "^5.0.0",
    "vl-ui-core": "^2.0.0",
    "replace": "^1.1.1"
  },
  "devDependencies": {
    "np": "4.0.2",
    "uglify-es": "github:mishoo/UglifyJS2#harmony",
    "wct-browser-legacy": "1.0.2",
    "web-component-tester": "6.9.2"
  },
  "publishConfig": {
    "registry": "https://repository.milieuinfo.be/artifactory/api/npm/acd-npm/"
  }
}
